{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "lib": [
      "es2020"
    ],
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./packages",
    "paths": {
      "cses-api": [
        "cses-api/src/"
      ]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc-experimental"
  }
}
